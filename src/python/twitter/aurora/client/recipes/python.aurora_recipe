python_installer = Task(
  name = 'python_installer_{{py_version}}',
  resources = Resources(cpu = 0.2, ram = 128*MB, disk = 128*MB),
  processes = [Packer.install('__recipe_python{{py_version}}', role='mesos', version='live')]
)

recipes = {
  'python26': python_installer.bind(py_version = '26'),
  'python27': python_installer.bind(py_version = '27'),
  'python32': python_installer.bind(py_version = '32'),
  'python33': python_installer.bind(py_version = '33'),
}
